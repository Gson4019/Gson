<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.AccountDao">

   <select id="queryPasswordByAccount" resultType="java.lang.String">
       select password from account where account = #{account}
   </select>

    <insert id="insertAccount">
        insert into account values(#{account},#{password})
    </insert>

    <update id="updatePwd">
        update account set password = #{password} where account = #{account}
    </update>
</mapper>