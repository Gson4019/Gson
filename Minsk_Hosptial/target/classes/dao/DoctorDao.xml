<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.DoctorDao">

    <select id="selectDoctorByDno" resultType="entity.Doctor">
        select * from doctor where Dno = #{dno}
    </select>

    <select id="selectPassword" resultType="java.lang.String">
        select password from account where account = #{account}
    </select>

    <select id="queryDoctorByAccount" resultType="entity.Doctor">
        select * from doctor where daccount = #{account}
    </select>

    <select id="queryAccount" resultType="java.lang.String">
        select daccount from doctor where dno = #{Dno}
    </select>

    <update id="updateDoctorInfo">
        update doctor set dname=#{Dname},dsex=#{Dsex},major=#{major},telephone=#{telephone},message=#{message} where dno=#{Dno}
    </update>

</mapper>