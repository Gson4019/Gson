<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.TicketDao">
    <insert id="insertTicket" useGeneratedKeys="true" keyProperty="Tno">
        insert into patient_ticket(Rno,QueueNum,Pname,Pno,Pkind,Dname,Dno) values(#{Rno},#{QueueNum},#{Pname},#{Pno},#{Pkind},#{Dname},#{Dno});
    </insert>
    
    <select id="queryTicketByPno" resultType="entity.Patient_Ticket">
        select * from patient_ticket where Pno = #{Pno}
    </select>

    <update id="addQueueNum">
        update patient_ticket set queuenum = #{QueueNum} where tno = #{Tno}
    </update>

</mapper>